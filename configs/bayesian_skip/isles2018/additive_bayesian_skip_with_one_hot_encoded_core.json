{
  "training":{
    "arch_type": "isles2018",
    "n_epochs": 1000,
    "lr_policy": "step",
    "lr_decay_iters": 200,
    "batchSize": 4,
    "preloadData": true,
    "early_stopping":{
      "patience": 20,
      "min_epochs": 200,
      "monitor": "Seg_Loss"
    },
    "verbose": "True"
  },
  "visualisation":{
    "display_port": 8097,
    "no_html": true,
    "save_epoch_freq": 10,
    "display_winsize": 256,
    "display_id": 1,
    "display_single_pane_ncols": 0
  },
  "data_split": {
    "train_size": 0.7,
    "test_size": 0.15,
    "validation_size": 0.15,
    "seed": 42
  },
  "data_path": {
    "isles2018": "/home/klug/working_data/perfusion_maps/scaled_standardized_isles_data_set_with_one_hot_encoded_core.npz"
  },
  "data_opts":{
    "channels": [0, 1, 2, 3, 4 , 5, 6]
  },
  "augmentation": {
    "isles2018": {
      "rotate": 7.5,
      "scale_val": [0.8, 1.2],
      "max_deform": [12, 12, 0],
      "shift_val": [0, 5],
      "elastic_control_points": 7,
      "random_flip_prob": 0.5,
      "random_affine_prob": 0.5,
      "random_elastic_prob": 0,
      "random_noise_prob": 0.5,
      "scale_size": [256, 256, 32, 6]
    }
  },
  "model":{
    "type":"seg",
    "continue_train": false,
    "which_epoch": -1,
    "model_type": "unet_pct_bayesian_multi_att_dsv",
    "tensor_dim": "3D",
    "conv_bloc_type": "classic",
    "division_factor": 16,
    "input_nc": 6,
    "output_nc": 2,
    "prior_information_channels": [5, 6],
    "bayesian_skip_type": "add",
    "lr_rate": 1e-4,
    "l2_reg_weight": 1e-6,
    "feature_scale": 4,
    "gpu_ids": [0],
    "isTrain": true,
    "checkpoints_dir": "./checkpoints",
    "experiment_name": "std_isles_additive_bayesian_skip",
    "criterion": "dice_loss"
  }
}


